<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Ticket" />

    <style name="Ticket.Subject" parent="Common.HighlightText">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Ticket.Description" parent="Common.RegularText">
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Ticket.Id" parent="Common.RegularText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Ticket.Status" parent="Common.RegularText">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Ticket.LastUpdate" parent="Common.DetailText">
        <item name="android:ellipsize">marquee</item>
    </style>

</resources>